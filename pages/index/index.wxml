<!--index.wxml-->
<view class="bottom_shadow">　</view>
<view class="title" style="top: {{statusBarHeight}}px;">XAI 日报</view>
<view class="container">
    <button wx:if="{{!userInfo}}" class="item" bindtap="Login">授权登录</button>
    <view wx:else>
      <view style="text-align: center;"><image class="avatarUrl" src="{{userInfo.avatarUrl}}"></image></view>
      <view class="nickname">{{userInfo.nickName}}</view>
      <button style="margin-top: 30px;" class="item" bindtap="writelog">写日志</button>
      <button style="margin-top: 30px;" class="item" bindtap="guanli">管理页面</button>
    </view>
</view>

<view class="bottom_text">XAI 工作室</view>