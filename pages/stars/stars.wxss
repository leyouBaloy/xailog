/* pages/stars/stars.wxss */
.item2 {
    position: relative;
    display: flex;
}

.text {
    position: absolute;
    transform: translate(0,-50%);
    left: 8px;
    top: 50%;
    padding: 4px;
    font-size: 16px;
    color: #4F4F4F;
    font-weight: bold;
}

image{
    position: absolute;
    transform: translate(0,-50%);
    top: 50%;
    width: 20px;
    right: 20px;
    padding: 8px;
}

table {
    background-color: #f7f7f7;
    width: 92%;
    border-radius: 15px;
    padding: 2px 6px 2px 6px;
}

tr {
    padding: 4px 0 4px 0;
    display: flex;
    width: 100%;
    border-bottom: 1px solid #dadada;
}

td {
    align-items: center;
    display: flex;
    width: 100%;
}

.td_center {
    justify-content: center;
}