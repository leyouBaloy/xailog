.page-section-spacing{
  margin-top: 10rpx;
}
.scroll-view_H{
  white-space: nowrap;
}
.kuandu{ 
  width:100%; 
} 


.td {
    min-width: 675rpx;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.order-item { 
  height: 100rpx; 
  width: 100%; 
  display: flex; 
  position: relative; 
} 
.remove{  
  width: 240rpx;  
  height: 290rpx;  
  background-color: rgb(206, 45, 58); 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -240rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}  

.touxiang {
  display: flex;
  width: 32px;
  height: 32px;
  border-radius: 50%;
}

.setting{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}
