<wxs src="/pages/day/filter.wxs" module="filters"/>

<!-- 下拉菜单 -->

<van-dropdown-menu>
  <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" data-time1="{{time1}}" data-time2="{{time2}}" block round bind:change="try" />
  <van-dropdown-item id="item" title="{{ itemTitle }}">
    <van-cell title="选择时间" is-link > 
    <picker mode="multiSelector" data-changshi="{{changshi}}" block round bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">  
          <input value='{{time}}' placeholder='' disabled/>  
        </picker>  
      </van-cell> 
      <van-cell title="全部日期"  data-changshi="{{changshi}}" block round  bind:click="quanbu" is-link> 
      </van-cell> 
</van-dropdown-item>
</van-dropdown-menu>

<!-- 商品卡片 -->
<block wx:key="item" wx:for="{{shuju}}" wx:for-item="item">
  <scroll-view scroll-y="{{isScroll}}" style='height:300rpx'> 
    <view data-index='{{index}}' class="order-item" bindtouchstart="drawStart" bindtouchmove="drawMove" bindtouchend="drawEnd" style="right:{{item.right}}rpx">  
        <van-card data-id='{{item._id}}' bindtap="detail">
          <view slot="title" wx:for="{{nameall}}" wx:for-item="item2">
            <view wx:if="{{item._openid==item2._openid}}" class="setting"> <image class="touxiang" src="{{item2.avatar}}"></image><text style="font-weight:bold">{{item2.name}}</text></view>
            <!-- <view wx:else></view> -->
          </view>
          <view slot="desc" class='td' >    
            {{item.content}}
          </view>
          <view slot="footer">
            <text>{{filters.formatDate(item.time)}}</text>
            <van-tag plain type="danger" wx:if="{{item.ifread}}">已读</van-tag>
            <van-tag plain type="danger" wx:else="{{item.ifread}}">未读</van-tag>
            <van-tag plain type="danger" wx:if="{{item.ifstar}}">小昕星</van-tag>
          </view> 
      </van-card>
      <view class="remove" bindtap="delItem" data-id="{{item._id}}" data-open="{{item._openid}}">删除</view>
    </view>
</scroll-view> 
</block> 

