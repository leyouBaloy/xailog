    <view class="th">评论</view>
  </view>

	<block wx:for="{{shuju}}">
    <view class="tr bg-g" wx:if="{{item._openid == 'oYYzo5bOK3I-6KWZCI3Z3NtuIVk8'}}">
      <view class="td">{{item.time}}</view>
      <view class="td" bindtap="detail">{{item.content}}</view>
      <view class="td">{{item.ifread}}</view>
      <view class="td">{{item.ifstar}}</view>
  	</view>
	</block>

<view wx:for="{{shuju}}">
