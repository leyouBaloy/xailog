<wxs src="/pages/day/filter.wxs" module="filters"/>

<!-- 下拉菜单 -->

<van-dropdown-menu>
  <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" bind:change="try"/>
  <van-dropdown-item id="item" title="{{ itemTitle }}">
    <van-cell title="选择时间" is-link > 
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">  
          <input value='{{time}}' placeholder='' disabled/>  
        </picker>  
      </van-cell> 
      <van-cell title="全部日期" bind:click="quanbu" is-link> 
      </van-cell> 
</van-dropdown-item>
<view style="padding: 5px 16px;"> 
    <van-button type="default" plain hairline data-changshi="{{changshi}}" data-time1="{{time1}}" data-time2="{{time2}}" block round bind:click="onConfirm">
      确认
    </van-button>
</view>
</van-dropdown-menu>
<!-- 新下拉菜单 -->
<van-dropdown-menu>
  <van-dropdown-item id="item" title="筛选">
    <van-cell title="选择时间" is-link > 
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">  
          <input value='{{time}}' placeholder='' disabled/>  
        </picker>  
      </van-cell> 
      <van-cell title="清空时间" is-link></van-cell>
    <van-cell title="只看我的">
      <van-switch
        slot="right-icon"
        size="24px"
        style="height: 26px"
        checked="{{ switch2 }}"
        active-color="#ee0a24"
        bind:change="onSwitch2Change"
      />
    </van-cell>
    
    <view style="padding: 5px 16px;">
      <van-button type="danger" block round bind:click="onConfirm">
        确认
      </van-button>
    </view>
  </van-dropdown-item>
</van-dropdown-menu>

<!-- 商品卡片 -->
<block wx:key="item" wx:for="{{shuju}}" wx:for-item="item">
  <scroll-view scroll-y="{{isScroll}}" style='height:300rpx'>
    <view data-index='{{index}}' class="order-item" bindtouchstart="drawStart" bindtouchmove="drawMove" bindtouchend="drawEnd" style="right:{{item.right}}rpx"> 
        <van-card data-id='{{item._id}}' bindtap="detail">
          <view slot="title" wx:for="{{nameall}}" wx:for-item="item2">
            <view wx:if="{{item._openid==item2._openid}}" class="setting"> <image class="touxiang" src="{{item2.avatar}}"></image><text style="font-weight:bold">为什么这里空出来一块 {{item2.name}}</text></view>
            <!-- <view wx:else></view> -->
          </view>
          <view slot="desc" class='td' >
            
            {{item.content}}

          </view>
          <view slot="footer">
            <text>{{filters.formatDate(item.time)}}</text>
            <van-tag plain type="danger" wx:if="{{item.ifread}}">已读</van-tag>
            <van-tag plain type="danger" wx:else="{{item.ifread}}">未读</van-tag>
            <van-tag plain type="danger" wx:if="{{item.ifstar}}">小昕星</van-tag>
          </view> 
      </van-card>
  <view class="remove" bindtap="delItem" data-id="{{item._id}}"  data-open="{{item._openid}}">删除 </view>
  </view>
</scroll-view> 
</block> 

