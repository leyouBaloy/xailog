<!--pages/day/day.wxml-->
<view class="table">
  <view class="tr bg-w">
    <view class="th">时间</view>
    <view class="th">日志</view>
    <view class="th">是否已读</view>
    <view class="th">评论</view>
  </view>

	<block wx:for="{{listData}}" wx:key="{{code}}" >
    <view class="tr bg-g" wx:if="{{item.code == '张三'}}">
      <view class="td">{{item.id}}</view>
      <view class="td" bindtap="detail">{{item.text}}</view>
      <view class="td">{{item.type}}</view>
      <view class="td">{{item.id}}</view>
  	</view>
	</block>

</view>
