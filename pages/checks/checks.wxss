/* pages/checks/checks.wxss */

.image {
    width: 230rpx;
  }
  
.title_bar {
  display: flex;
  position: relative;
  width: 100%;
  height: 44px;
  background-color: #e48934;
}

.touxiang {
  display: flex;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  text-align: center;
  margin: 7px 7px 7px 14px;
}

.name {
  position: absolute;
  width: fit-content;
  font-weight: bold;
  transform: translate(0,-50%);
  top: 50%;
  left: 54px;
}

.date {
  font-size: 20px;
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-left: 16px;
}

.text_bar {
  display: flex;
  margin: 8px 0px 8px 0px;
  width: 100%;
}

.text {
  height: auto;
  width: 100%;
  margin: 0 16px 0 16px;
  word-break:break-all;
  white-space: pre-wrap;
  font-size: 16px;
}

.push_date {
  font-size: 14px;
  margin: 0 16px 0 16px;
  width: 100%;
  color: #a9a9a9;
}

.comment_bar {
  border-radius: 5px;
  display: flex;
  width: 100%;
  height: auto;
  width: 100%;
  margin: 0 10px 0 10px;
  background-color: rgba(0, 0, 0, 0.1);
}

.comment {
  position: relative;
  display: flex;
  margin: 4px 6px 4px 6px;
  font-size: 14px;
}

.comment_name {
  position: absolute;
  width: auto;
  color: #2e4e7e;
}

.comment_text {
  width: auto;
  height: auto;
  word-break:break-all;
  white-space: pre-wrap;
}
