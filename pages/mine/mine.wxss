/* pages/mine/mine.wxss */
.title {
    position: relative;
    text-align: center;
    font-size: 18px;
    font-weight: bold;
    margin: 5px;
  }
    
  .group {
    padding: 10px;
  }
    
  .name {
    font-size: 18px;
    font-weight: bold;
    padding-top: 10px;
    padding-left: 20px;
    margin-bottom: 5px;
  }
    
  .gname {
    padding-left: 20px;
    padding-bottom: 10px;
  }
  
  .avatarUrl {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    text-align: left;
  }
  

  .profile {
    height: 375rpx;
    background-color: #ea4451;
    display: flex;
    justify-content: center;
    align-items: center;
    }

  .avatar {
    display: block;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 2rpx solid #fff;
    overflow: hidden;
  }

  .nickname {
    display: block;
    text-align: center;
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #fff;
    font-weight: bold;
    margin-top: 10px;
  }